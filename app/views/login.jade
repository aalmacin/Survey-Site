// Main login page. Shows the login form
doctype html(lang='en')
head
        meta(http-equiv='content-type', content='text/html; charset=UTF-8')
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
        link(rel='stylesheet', href='./lib/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet', href='./lib/bootstrap/dist/css/bootstrap-theme.min.css')
        title Login | Survey Site | Ace Digital
body(ng-app='mainApp')
        .container(ng-controller='LoginCtrl')
                .row
                        #leftCol.col-md-3
                                .well
                                        img(src="./img/logo.png", alt="The Ace Digital logo")
                                        ul#sidebar.nav.nav-stacked
                                                li
                                                        a(href='/') Home
                                                        a(href='/login') Login
                                                        a(href='/register') Register
                                                        a(href='/allsurveys') All Surveys
                        .col-md-9
                                h2 Login
                                form(name='loginForm', ng-submit="login()", role='form')
                                        .errors(ng-messages='loginForm.username.$error', role='alert')
                                                span(ng-message='required') Username is required
                                        .errors(ng-messages='loginForm.password.$error', role='alert')
                                                span(ng-message='required') Password is required
                                                span(ng-message='minlength') Password Minimum length is 6
                                        .errors(role='alert')
                                                span(ng-repeat='error in errors')
                                                       p {{ error }}

                                        .form-group
                                                label(for='username') Username
                                                input#username.form-control(type='text', name='username', ng-model='loginUser.username', placeholder='Enter Username', required='')
                                        .form-group
                                                label(for='password') Password
                                                input#password.form-control(type='password', name='password', placeholder='Password', minlength='6', required='', ng-model='loginUser.password')
                                        .fields
                                                input#submit.btn.btn-primary.form-control(type='submit', value='Login')
                                p.text-center
                                        | To create an account, go to the
                                        a(href='/register')  Registration Page

        script(type="text/javascript", src="./lib/angular/angular.min.js")
        script(type="text/javascript", src="./lib/angular-route/angular-route.min.js")
        script(type="text/javascript", src="./lib/angular-messages/angular-messages.min.js")
        script(type="text/javascript", src="./lib/jquery/dist/jquery.min.js")
        script(type="text/javascript", src="./lib/jquery/dist/jquery.min.js")
        script(type="text/javascript", src="./lib/bootstrap/dist/js/bootstrap.min.js")


        script(type="text/javascript", src="./js/users/login.client.controller.js")
